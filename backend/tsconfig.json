{
  "compilerOptions": {
    "target": "ES2020",
    "module": "Node16",
    "moduleResolution": "node16",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,
    "verbatimModuleSyntax": false,
    "rootDir": "src",
    "outDir": "dist"
  },
  "include": ["src/**/*", "src/types/express.d.ts"]
}
